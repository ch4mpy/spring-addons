{
  "groups": [
    {
      "name": "com.c4-soft.springaddons.recaptcha",
      "type": "com.c4_soft.springaddons.starter.recaptcha.C4ReCaptchaSettings",
      "sourceType": "com.c4_soft.springaddons.starter.recaptcha.C4ReCaptchaSettings",
      "description": "Configuration for com.c4_soft.springaddons.starter.recaptcha.C4ReCaptchaValidationService"
    }
  ],
  "properties": [
    {
      "name": "com.c4-soft.springaddons.recaptcha.secret-key",
      "type": "string",
      "sourceType": "com.c4_soft.user_proxies.api.recaptcha.C4ReCaptchaSettings",
      "description": "Secret key from https://www.google.com/recaptcha/admin/site"
    },
    {
      "name": "com.c4-soft.springaddons.recaptcha.siteverify-url",
      "type": "java.net.URL",
      "sourceType": "com.c4_soft.user_proxies.api.recaptcha.C4ReCaptchaSettings",
      "description": "URL of the end-point to verify submitted reCaptcha strings",
      "defaultValue": "https://www.google.com/recaptcha/api/siteverify"
    },
    {
      "name": "com.c4-soft.springaddons.recaptcha.v3-threshold",
      "type": "jdouble",
      "sourceType": "com.c4_soft.user_proxies.api.recaptcha.C4ReCaptchaSettings",
      "description": "Minimum score under which a validation exception will be thrown",
      "defaultValue": 0.5
    }
  ]
}